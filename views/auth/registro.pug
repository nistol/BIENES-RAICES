extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-4xl= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-md
                form(method="post" action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold Tu nombre
                        input#nombre.w-full.px-3.py-1.border.border-grey300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value = usuario ? usuario.nombre: '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold.mt-4 Tu Email
                        input#email.w-full.px-3.py-1.border.border-grey300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value = usuario ? usuario.email:'')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold.mt-4 Tu contraseña
                        input#password.w-full.px-3.py-1.border.border-grey300.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold.mt-4 Repetir contraseña
                        input#password.w-full.px-3.py-1.border.border-grey300.rounded-md.placeholder-gray-400(placeholder="Repite Tu contraseña" type="password" name="password2")

                    div.flex.items-center.justify-between.mt-4
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
                        a.text-gray-500.text-xs(href="/auth/recuperar") Olvide mi Password  
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 mt-4 py-3 cursor-pointer text-white font-bold" type="submit" value="Crear cuenta")