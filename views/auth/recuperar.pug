extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-4xl= pagina

         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-md
                form(method="POST" action="/auth/recuperar")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold.mt-4 Email de registro
                        input#email.w-full.px-3.py-1.border.border-grey300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")

                    div.flex.items-center.justify-between.mt-4
                        a.text-gray-500.text-xs(href="/auth/registro") Â¿No tienes cuenta? Crea Una 
                        a.text-gray-500.text-xs(href="/auth/recuperar") Olvide mi Password  
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 mt-4 cursor-pointer py-3 text-white font-bold" type="submit" value="Recuperar Password")